{
	"extends": "airbnb",
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"react/jsx-indent": [
			"error",
			"tab"
		],
		"react/jsx-indent-props": [
			"error",
			"tab"
		],
		"react/jsx-one-expression-per-line": "off",
		"jsx-a11y/label-has-for": "off",
		"import/prefer-default-export": "off",
		"no-tabs": "off",
		"no-plusplus": "off",
		"no-underscore-dangle": "off",
		"quotes": ["error", "single", { "allowTemplateLiterals": true }]
	}
}
